page {
  width: 100%;
  height: 100%;
  /* background: #fafafa; */
}

.all-formview {
  height:100%;
  width: 100%;
}

.search-btns{
  display: flex;
  justify-content: center;
}
.search-btn {
  display: inline-block;
  height: 40px;
  padding-top: 10px;
  font: 16px "microsoft yahei";
  color: #fff;
  /* background-color: #FAE19D; */
  width: 90%;
  letter-spacing: 10px;
  border-radius: 0px;
  margin-top: 40px;
  position: relative;
  padding-left: 35px;
  background-color: #1296db
}

.search-btn-reset {
  display: inline-block;
  height: 40px;
  padding-top: 8px;
  font: 16px "microsoft yahei";
  width: 35%;
  letter-spacing: 10px;
  border-radius: 10px;
  border: 1px solid #000 ;
  margin-top: 40px;
  margin-left: 10%;
}

.back {
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  position: absolute;
  bottom: 0px;
  color: #000;
  font-size: 16px;
  font-family: "microsoft yahei";
}

.back-pressed {
  background-color: #e5e5e5;
  color: #1296db;
}

.search-item {
  font-size: 16px;
  display: flex;
  align-items: center;
  height: 40px;
  justify-content: space-around;
  background-color: #fff;
  margin-left: 5%;
  margin-right: 5%;
  border-bottom: 1px solid #f4f4f4;
  padding-left: 10px;
  padding-right: 10px;
}

.placeholder {
  text-align: left;
  font-size: 12px;
  color: #cacaca;
}

.search-item-lb {
  color: #c1c1c1;
  width: 120px;
  letter-spacing: 1px;
  font-family: "微软雅黑";
  flex-grow: 1;
}

.search-item-input {
  flex-grow: 3;
}
.search-item-lb1 {
  width: 200px;
  letter-spacing: 5px;
  font-family: "微软雅黑";
  flex-grow: 3;
}
.search-item-img {
  width: 24px;
  height: 24px;
}
