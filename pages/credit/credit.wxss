/* 最外层父元素 */

page {
  background-color: #f5f5f5;
}

.myContainer {
  width: 90%;
  /* height:660px; */
  margin-left: 5%;
  background: #fff;
  text-align: center;
}

.myContainerBottom {
  width: 100%;
  height: 100%;
  background: #fff;
  text-align: center;
  border-bottom: 1px solid #eee;
}

/* 标题 */

.mySearch {
  margin-top: 30rpx;
  height: 85rpx;
  line-height: 85rpx;
}

.mySearch>text {
  font-size: 18px;
  /* font-weight: bold; */
}

.myInputParent {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 70rpx;
  border: 1rpx solid #d8d8d8;
  border-radius: 3px;
  margin-bottom: 15px;
  background-color: #fff;
}

/* input输入框 */

.myInputParent>input {
  box-sizing: border-box;
  width: 660rpx;
  height: 70rpx;
  font-size: 28rpx;
  text-align: left;
  padding-left: 10px;
}

/* 验证码一行的父元素 */

.yanZhengMa {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 验证码的输入框 */

.yanZhengMa>input {
  width: 460rpx;
  display: inline-block;
}

/* 验证码图片 */

.yanZhengMa>image {
  width: 200rpx;
  height: 70rpx;
  display: inline-block;
}

/* 搜索的按钮 */

.mySearchParent>button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0rpx;
  background-color: #1195dd;
  color: #fff;
  font-size: 15px;
  margin: 0 auto;
}

/* 粗的分割线 */

.border {
  border: 5rpx solid #eee;
  width: 100%;
  margin: 30rpx auto;
}

.list-container {
  width: 660rpx;
  margin: 0 auto;
}

.list-title {
  color: #fd6060;
  font-size: 14px;
  /* font-weight:bold; */
  display: flex;
  justify-content: start;
  padding-top: 5rpx;
  padding-bottom: 15rpx;
  font-weight: bold;
}

.list-container-child {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 信用代码 */

.commonColorTitle {
  color: #2aa0e0;
  font-size: 12px;
  padding-right: 10rpx;
  padding-bottom: 14rpx;
}

.commonColorChild {
  color: #797979;
  font-size: 12px;
}

.xinYongDaiMa, .haiGauanDaiMa, .zhuCeHaiGuan, .jingYingLeiBie {
  display: flex;
  justify-content: start;
}

/* 公用分割线 */

.myTop {
  height: 250px;
  background-color: #f5f5f5;
}

.img-top {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  width: 336rpx;
  height: 112rpx;
}

