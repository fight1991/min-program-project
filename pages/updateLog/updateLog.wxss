page {
  height: 100%;
}

.info {
  width: 94%;
  margin-left: 3%;
}

.info-item {
  border-bottom: 1px solid #e3e3e3;
  padding: 5px 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.info-item-left {
  height: 50px;
}

.info-item-right {
  height: 40px;
}

.info-item-left-version {
  font-size: 15px;
  margin-top: 5px;
  letter-spacing: 2px;
}

.info-item-left-updateDate {
  color: #959595;
  font-size: 13px;
  margin-top: 3px;
}
