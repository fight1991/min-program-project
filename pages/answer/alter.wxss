@import "../../content/wxss/search.wxss";

page {
  background-color: #f5f5f5;
  padding: 0;
  margin: 0;
  font: 14px "microsoft yahei";
  height: 100%;
}

.question-content {
  background-color: #fff;
  padding: 10px;
}

.question-content-title {
  font-size: 14px;
  font-weight: bold;
}

.question-content-msg {
  margin-top: 8px;
}

.answer-content {
  padding: 10px;
  margin-top: 10px;
  background-color: #fff;
  /* width: 100%; */
}

.answer-content-tbar {
  display: flex;
  justify-content: space-between;
}

.answer-content-title {
  font-size: 14px;
  font-weight: bold;
}

.chk {
  padding-right: 5px;
  font-size: 12px;
}

.answer-des {
  background-color: #eee;
  font-size: 12px;
  border: 10px solid #eee;
  width:94%;
  border-radius: 2px;
}

.select {
  /* display: flex; */
  margin: 15px auto;
  border: 1px solid #eee;
  /* width:  90%; */
  border-radius: 4px;
  background-color: #fff;
  color: #ccc;
  font-size: 14px;
  line-height: 25px;
  height: 25px;
  text-align: center;
}

.placeholders {
  color: #c1c1c1;
}

.upload {
  /* margin-top: 10px; */
  display: flex;
  justify-content: flex-start;
  background-color: #fff;
}

.upload-images {
  z-index: 2;
  height: 80px;
  width: 80px;
  background-color: #eee;
}

.check-item {
  padding: 10px;
  position: relative;
}

.image-menu {
  height: 120rpx;
  width: 120rpx;
}

.image-remove {
  width: 15px;
  height: 15px;
  position: absolute;
  top: 5px;
  right: 5px;
}
.search-btn{
  margin: 10px 0 20px 0;
  border-radius: 4px;
}

.check-list{
  display: flex;
}
.check-item-first{
  padding-left:0;
}