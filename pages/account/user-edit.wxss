page {
  background-color: #f5f5f5;
  font-family: Microsoft Yahei;
  font-size: 14px;
}

.header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20px 0;
}

.user-info {
  margin-left: 25px;
}

.user-info-item {
  display: flex;
  padding: 8px 0;
  justify-content: flex-start;
  align-items: center;
}

.user-img {
  width: 120rpx;
  height: 120rpx;
}

.user-info-lb {
  font-size: 14px;
  color: #999;
}

.user-info-val {
  font-size: 14px;
  color: #000;
  padding-left: 30px;
  flex-grow: 2;
}

.margin-top-10 {
  margin-top: 10px;
}

.margin-top-40 {
  margin-top: 40px;
}

.border-top-1 {
  border-top: 1px solid #eee;
}

.user-info-company {
  padding-left: 10px;
}

.toward-img {
  width: 50rpx;
  height: 50rpx;
}

.user-info-company-name {
  padding: 0 0 5px 0;
  /* font-weight: bold; */
  font-size: 13px;
  color: #333;
  text-align: center;
}

.font-12 {
  font-size: 12px;
}

.color-gray {
  color: #999;
}

.del {
  background-color: #fff;
  padding: 15px 0;
  color: #ff4545;
  font-size: 16px;
  text-align: center;
}

.comapny-contaner {
  margin-left: 25px;
}

.comapny-contaner-title {
  height: 20px;
  line-height: 20px;
  padding: 10px 0;
  font-size: 14px;
  color: #999;
}

.comapny-contaner-ls {
  border-top: 1px solid #eee;
  font-size: 13px;
  color: #333;
}

.comapny-contaner-ls-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 10px 10px 0;
}

.item-left {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.img-status {
  padding-left: 10px;
  width: 25px;
  height: 14px;
}

.img-delete {
  width: 14px;
  height: 14px;
}

.img-float {
  width: 17px;
  height: 17px;
  margin-left:5px;
  border-radius: 50%;
}

