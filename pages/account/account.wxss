page {
  height: 100%;
  background-color: #f5f5f5;
}

.userinfo {
  background-color: #1296db;
  height: 100px;
  border-top: 0px solid #f5f5f5;
}

.userinfo-avatar {
  display: inline-block;
  position: absolute;
}

.userinfo-avatar-image {
  margin-left: 28rpx;
  height: 65px;
  width: 65px;
  border-radius: 8px;
  border: 1px solid #60a5db;
}

.userinfo-userName {
  font-size: 16px;
  margin-top: 20px;
  display: inline-block;
  margin-left: 90px;
  color: white;
}

.userinfo-email {
  display: inline-block;
  margin-top: 10px;
  margin-left: 90px;
  font-size: 14px;
  color: #f5f5f5;
}

.info-item {
  height: 100rpx;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.info-item-icon {
  height: 24px;
  width: 24px;
  align-items: center;
  border-radius: 50%;
  margin-left: 14px;
}

.info-item-span1 {
  align-items: center;
  justify-content: center;
  margin-left: 12px;
  font-size: 30rpx;
  flex-grow: 20;
  width: 20%;
}

.info-item-span2 {
  align-items: center;
  justify-content: center;
  margin-left: 5px;
  font-size: 30rpx;
  flex-grow: 1;
  color: #bdbdbd;
}

.info-item-right {
  line-height: 24px;
  text-align: right;
  height: 24px;
  width: 62%;
  align-items: center;
  padding-right: 10px;
  color: #c1c1c1;
  flex-grow: 0;
  font-size: 30rpx;
  /* border: 1px solid red; */
}

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.drawer_box {
  height: 185px;
  overflow: hidden;
  position: fixed;
  width: 650rpx;
  top: 50%;
  left: 0;
  margin-left: 110px;
  z-index: 1001;
  margin: -150px 50rpx 0 50rpx;
  /* overflow-y: scroll;  *//*超出父盒子高度可滚动*/
}

.drawer-body {
  background: #fafafa;
  border-radius: 6px;
  height: 155px;
}

.drawer-title {
  height: 20px;
  font: 16px "microsoft yahei";
  text-align: center;
  color: #fff;
}

.drawer-title-image {
  width: 40px;
  height: 40px;
  padding: 3px;
  position: relative;
  top: -45rpx;
  background: #fafafa;
  opacity: 1;
  border-radius: 22px;
}

.list-item {
  padding-top: 8px;
  display: -webkit-box;
  display: box;
  padding-bottom: 10px;
}

.list-item-label {
  font: 30rpx "microsoft yahei";
  text-align: center;
  padding: 10rpx;
  height: 20px;
  border: 1px solid #dbdbdb;
  display: inline-block;
  margin-left: 40rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  border-radius: 10rpx;
  width: 140rpx;
}

.info-style {
  margin-top: 20px;
}

.one {
  display: flex;
  justify-content: space-between;
}

.head {
  width: 50%;
}
