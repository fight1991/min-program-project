.radio-group {
  border-bottom: 1px solid #ddd;
}

.radio {
  display: flex;
  align-items: center;
  border-top: 1px solid #ddd;
  padding: 5px;
}

.bind-add {
  height: 40px;
  width: 100%;
  display: flex;
  font: 16px microsoft yahei;
  justify-content: center;
  align-items: center;
  background-color: #1296db;
  color: #fff;
  position: fixed;
  bottom: 0;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-mask1 {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 94%;
  overflow: hidden;
  position: fixed;
  bottom: 40%;
  left: 0;
  z-index: 9999;
  margin-left: 3%;
  background: #f9f9f9;
  border-radius: 10rpx;
}

.modal-dialog1 {
  width: 94%;
  overflow: hidden;
  position: fixed;
  top: 20%;
  left: 0;
  z-index: 9999;
  margin-left: 3%;
  background: #f9f9f9;
  border-radius: 10rpx;
}

.modal-content {
  padding-bottom: 5px;
}

.modal-title {
  font-size: 36rpx;
  color: #030303;
  text-align: center;
  padding-bottom: 20rpx;
}

.modal-input {
  height: 40px;
  line-height: 40px;
  width: 80%;
  font: 16px microsoft yahei;
  background: #fff;
  border: 1rpx solid #ddd;
  margin: 0 auto
}

.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
