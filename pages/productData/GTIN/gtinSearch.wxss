/* pages/productData/GTIN/gtinSearch.wxss */

.search {
  height: 60px;
  padding: 10px 15px;
  background-color: #1296DB;
  border-top: 1px solid rgb(13, 123, 226);
  font-size: 12px;
  color: #fff;
  box-sizing: border-box;
}
.input-placeholder {
  font-size: 14px;
  color: #fff;
  line-height: 30px;
}
.search image {
  width: 20px;
  height: 20px;
}
.search-item {
  height: 40px;
  position: relative;
  padding: 5px 50px;
  box-sizing: border-box;
  background-color: rgba(0,0,0,.1);
  border-radius: 5px;
}
.search-item .icon,
.search-item image {
  position: absolute;
  top: 50%;
  transform:translateY(-50%)
}
.search-item .icon {
  left: 15px;
}
.search-item image {
  right: 15px;
}
.search-item input {
  width: 100%;
  height: 30px;
  min-height: 30px;
}
.gtinList .items {
  border: 1px solid #f5f5f5;
  padding: 20rpx 30rpx;
}
.gtinList .items .gtinNum {
  color: #333;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}
.gtinList .items .brandName {
  color: #999;
  font-size: 24rpx;
}
.loadmore {
  color: #888;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
}

.loadmore.loading::before {
  content: '';
  width: 40rpx;
  height: 40rpx;
  margin-top: -10rpx;
  margin-right: 10rpx;
  display: inline-block;
  vertical-align: middle;
  animation: loading 1s steps(12) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%
}

@keyframes loading {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(-360deg)
  }
}