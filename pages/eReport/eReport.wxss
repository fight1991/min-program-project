page {
  height: 100%;
  background-color: #1296db;
}

.canvas {
  background-color: #1296db;
  width: 100%;
  height: 260px;
  /* transform: scale(0.5); */
  margin-top: 10px;
}

.section {
  padding-top: 10px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.picker {
  padding-right: 2px;
  font-size: 14px;
  color: #fff;
  font-family: "microsoft yahei";
  text-align: center;
}

.triangle-down {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 15rpx solid #fff;
}

.table {
  widows: 98%;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.td {
  width: 33%;
  text-align: center;
  font-size: 12px;
  height: 80rpx;
  line-height: 80rpx;
  color: #b8b8b8;
}

.th {
  font-weight: bold;
  color: #1296db;
  width: 33%;
  text-align: center;
  font-size: 12px;
  height: 80rpx;
  line-height: 80rpx;
}
