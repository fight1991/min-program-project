page {
  background-color: #f4f4f4;
  height: 100%;
}

.table {
  background-color: #fff;
  box-shadow: 5px 5px 5px #e9e9e9;
  width: 100%;
  margin-bottom: 10px;
}

.tr {
  padding: 0 0 18px 0;   
  width: 100%;
  display: flex;
  justify-content: flex-start;
}

.tr-top {
  padding-top:18px;   
}

.th {
  display: flex;
  border-bottom: 1px solid #eee;
  justify-content: flex-start;
  font: 12px microsoft yahei;
  padding: 2% 0 2% 2%;
  text-align: left;
  width: 98%;
  height: 30rpx;
  line-height: 30rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  font-size: 30rpx;
}

.td {
  font: 14px microsoft yahei;
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 0 3px;
}

.table-image {
  width: 80rpx;
  height: 80rpx;
}

.td-content{
    position:relative;
}

.td-image {
  position:absolute;
  right: -8px;
  top: -8px;
  width: 30rpx;
  height: 30rpx;
}
/* ShortcutMenu */

.table-view {
  margin-top: 5px;
  font: 12px microsoft yahei;
  text-align: center;
}

.th-view {
  width: 10rpx;
  height: 25rpx;
  background-color: #1296db;
  margin-right: 5px;
}

.btn-contaner{
  display: flex;
  position:  fixed;
  bottom: 0px;
  width: 100%; 
  background-color: #f4f4f4;
  height: 50px;
}

.btn{
  height: 35px;
  width: 45%; 
  margin: 10px auto; 
  font-size: 14px;
  background-color: #1296db;
}

.content-view{
  padding-bottom: 50px;
}
