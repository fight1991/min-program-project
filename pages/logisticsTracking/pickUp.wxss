page {
  width: 100%;
  background-color: #f5f5f5;
}

.contents {
  padding-left: 5%;
  background-color: #fff;
  padding-right: 5%;
}

.titles {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  font: 15px microsoft yahei;
  color: #9b9b9b;
}

.first {
  width: 100%;
}

.other {
  width: 90%;
}

.inputs {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 10rpx;
  font: 16px microsoft yahei;
  color: #333;
  border: 1px solid #d8d8d8;
  border-radius: 5rpx;
}

.tips-add {
  padding: 20rpx 0 20rpx 0;
  text-align: center;
  font: 14px microsoft yahei;
  color: #1296db;
}

.camera {
  padding-right: 10rpx;
  height: 30rpx;
  width: 35rpx;
}

.close {
  height: 40rpx;
  width: 40rpx;
}

.items {
  background-color: #fff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 5%;
  padding-right: 5%;
  margin-top: 10px;
  display: flex;
  flex-wrap: wrap;
}

.img-delete {
  width: 15px;
  height: 15px;
  position: absolute;
  top: 0px;
  right: 10px;
}

.check-item {
  padding-right: 10px;
  position: relative;
}

.upload {
  height: 70px;
  width: 70px;
}

.educt_upload_add {
  height: 70px;
  width: 70px;
}

.buttons {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 10px;
}

.button {
  width: 90%;
  background-color: #1296db;
  color: #fff;
}
