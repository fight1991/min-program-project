@import "../../content/wxss/common.wxss";

page {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  padding: 0;
  margin: 0;
  overflow: hidden;
  font: 14px microsoft yahei;
  box-sizing: border-box;
}

.swiper-tab {
  width: 100%;
  display: flex;
  background-color: #eaeaea;
  text-align: center;
}

.swiper-tab-list {
  font: 14px microsoft yahei;
  display: inline-block;
  width: 50%;
  color: #b2b2b2;
  background-color: #fff;
  border-bottom: 1rpx solid #f4f4f4;
}

.on {
  color: #1296db;
  background-color: #fff;
  border-bottom: 5rpx solid #1296db;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.image-jing {
  height: 35px;
  width: 35px;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 100;
}

.image-menu {
  height: 120rpx;
  width: 120rpx;
  position: absolute;
  bottom: 50rpx;
  right: 50rpx;
  z-index: 100;
}

.list-item {
  height: 100px;
  display: flex;
  background-color: #fff;
  padding: 20px 20px 10px 20px;
  border-bottom: 1px solid #efefef;
}

.list-item-frist {
  border-top: 1px solid #efefef;
}

.list-item-mine {
  border-top: 1px solid #efefef;
  height: 60px;
  display: flex;
  background-color: #fff;
  padding: 10px 20px 10px 20px;
  border-bottom: 1px solid #efefef;
  justify-content: space-between;
  align-content: center;
}

.list-item-mine-detail {
  width: 70%;
}

.list-item-top {
  background-color: #f0f5f9;
}

.userinfo-avatar-image {
  /* margin-left: 28rpx; */
  height: 40px;
  width: 40px;
  border-radius: 50%;
  border: 1px solid #60a5db;
  margin-right: 5px;
}

.avatar-image {
  height: 40px;
  width: 40px;
  border-radius: 50%;
  border: 1px solid #60a5db;
  margin-right: 5px;
}

.list-item-answer {
  font-size: 14px;
  text-overflow: -o-ellipsis-lastline;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}

.list-item-question {
  margin-top: 8px;
  font-size: 12px;
  color: #a0a1a0;
  text-align: left;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}

.list-item-date {
  font-size: 12px;
  color: #a0a1a0;
  padding: 5px 0;
}

.list-item-answer-img {
  padding-top: 2px;
  width: 24px;
  height: 24px;
}

.list-item-imgs-lb {
  font-size: 9px;
  color: #ccc;
}

.foot {
  background-color: #e7e7e7;
  display: flex;
  justify-content: space-between;
  align-content: space-between;
  align-items: center;
  height: 20px;
  padding: 10px;
  font-size: 12px;
}

.foot-font {
  color: #a5aab1;
}

.foot-line {
  color: #d8d8d8;
}

.view-input {
  background-color: #0f7ab2;
  width: 85%;
  margin-left: 2%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 30px;
  border-radius: 30px;
  flex-grow: 2;
}

.view-search {
  display: flex;
  background-color: #1296db;
  justify-content: space-between;
  padding-top: 5px;
  padding-bottom: 10px;
}

.img-add {
  padding: 0 10px;
  padding-top: 2px;
  height: 26px;
  width: 26px;
}

.img-voice {
  height: 15px;
  width: 15px;
  margin-right: 10px;
}

.placeholder-class {
  color: #d8d8d8;
  font-size: 14px;
  width: 100%;
}

.img-search {
  height: 12px;
  width: 12px;
  padding-left: 10px;
}

.input-class {
  /* color: #fff; */
  padding-left: 5px;
  font-size: 14px;
  height: 30px;
  width: 100%;
}

.search-btns {
  display: flex;
  justify-content: center;
}

.search-btn {
  height: 40px;
  line-height: 40px;
  padding-top: 10px;
  font: 15px "microsoft yahei";
  color: #fff;
  width: 40%;
  letter-spacing: 2px;
  border-radius: 5px;
  margin-top: 20px;
  background-color: #1296db;
}

.content {
  background-color: #fff;
  padding-left: 3%;
  padding-right: 3%;
  border-bottom: 1px solid #f5f5f5;
}

.content-title {
  display: flex;
  align-items: center;
  padding-top: 10px;
  padding-bottom: 5px;
  font: 16px microsoft yahei;
}

.content-status {
  padding-top: 10px;
  padding-right: 6px;
  padding-bottom: 5px;
  font: 14px microsoft yahei;
  position: relative;
}

.float_div {
  position: absolute;
  width: 6px;
  height: 6px;
  background-color: red;
  border-radius: 50%;
  right: 0px;
  top: 5px;
  z-index: 100;
}

.content-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content-item {
  padding-bottom: 5px;
  font: 13px microsoft yahei;
  color: #b2b2b2;
}

.img-trafMode {
  width: 16px;
  height: 16px;
  padding-right: 5px;
}

.inform {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 30px;
  width: 100%;
  background-color: #f7d3d3;
  font: 13px microsoft yahei;
}

.img-inform {
  height: 15px;
  width: 15px;
}

.foot {
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-content: space-between;
  align-items: center;
  height: 20px;
  padding: 10px;
  font-size: 12px;
}

.foot-font {
  color: #a5aab1;
}

.foot-line {
  color: #d8d8d8;
}

.img-logistics-add {
  z-index: 9999;
  height: 40px;
  width: 40px;
  position: absolute;
  right: 20px;
  bottom: 20px;
}

.search-container {
  position: absolute;
  background: #000;
  opacity: 0.6;
  z-index: 99998;
}

.search-content {
  background: #fff;
  position: absolute;
  right: 0;
  z-index: 99999;
}

.search-group {
  padding: 8px 0 5px 10px;
  border-bottom: 1px solid #f3f3f3;
}

.search-group-title {
  font-size: 12px;
  color: #666;
}

.search-group-time {
  display: flex;
  align-items: center;
  margin-top: 8px;
}

.search-group-time-item {
  border-radius: 13px;
  background-color: #f5f5f5;
  width: 90px;
  height: 25px;
  font-size: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.check-container {
  display: flex;
  margin-top: 8px;
}

.check-item {
  width: 80px;
  height: 35px;
  background-color: #f5f5f5;
  margin: 5px 0 5px 10px;
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 11px;
  color: #363636;
}

.check-item-first {
  margin-left: 0;
  margin-right: 0;
}

.btn-reset {
  background: -webkit-linear-gradient(left, rgb(24, 170, 250), rgb(73, 112, 252));
  background: -o-linear-gradient(left, rgb(24, 170, 250), rgb(73, 112, 252));
  background: -moz-linear-gradient(left, rgb(24, 170, 250), rgb(73, 112, 252));
  background: linear-gradient(left, rgb(24, 170, 250), rgb(73, 112, 252));
  width: 85px;
  height: 35px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 14px;
  border-radius: 18px 0 0 18px;
}

.btn-confrim {
  margin: 0 10px 0 2px;
  background: -webkit-linear-gradient(left, rgb(75, 109, 252), rgb(139, 35, 255));
  background: -o-linear-gradient(left, rgb(75, 109, 252), rgb(139, 35, 255));
  background: -moz-linear-gradient(left, rgb(75, 109, 252), rgb(139, 35, 255));
  background: linear-gradient(left, rgb(75, 109, 252), rgb(139, 35, 255));
  width: 85px;
  height: 35px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 14px;
  border-radius: 0 18px 18px 0;
}

.search-btn-group {
  display: flex;
  justify-content: flex-end;
}

.checked {
  background-image: url(https://51baoguan.cn/content/images/themes/A/checked-bg.png);
  background-position: bottom right;
  background-repeat: no-repeat;
}

.img-clear {
  height: 15px;
  width: 15px;
  padding-right: 10px;
}
