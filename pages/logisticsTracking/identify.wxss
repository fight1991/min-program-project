page {
  background-color: #f5f5f5;
  height: 100%;
}

.btn {
  font: 16px microsoft yahei;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #1296db;
  width: 40%;
  color: #fff;
}

.right {
  border-radius: 0 50rpx 50rpx 0;
}

.left {
  border-radius: 50rpx 0 0 50rpx;
}

.btns {
  width: 100%;
  position: absolute;
  bottom: 40rpx;
  display: flex;
  justify-content: center;
}

.mid {
  width: 5rpx;
}

.item {
  text-align: center;
  padding-bottom: 20rpx;
}

.input {
  font: 45px microsoft yahei;
  text-align: center;
  width: 90%;
  background-color: #fff;
  height: 120rpx;
  margin: 0 auto;
}

.title {
  font: 16px microsoft yahei;
  color: #333;
}

.tips {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 80rpx;
  padding-bottom: 250rpx;
}

.tip {
  font: 14px microsoft yahei;
  color: #999;
}

.img-tip {
  height: 30rpx;
  width: 30rpx;
  padding-right: 10rpx;
}

.contents {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
