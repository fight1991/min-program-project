page {
  width: 100%;
  height: 100%;
}

.img-top {
  height: 130rpx;
}

.img-step1 {
  height: 170rpx;
  width: 100%;
}

.btns {
  display: flex;
  padding-top: 100rpx;
  padding-bottom: 70rpx;
  justify-content: space-around;
}

.img-btn {
  height: 130rpx;
  width: 130rpx;
}

.item-content {
  width: 100%;
  padding-left: 5%;
  margin-top: 40rpx;
  background-color: #fff;
  padding-bottom: 20rpx;
}

.title {
  font: 14px microsoft yahei;
  color: #9b9b9b;
  height: 30px;
  line-height: 30px;
}

.input {
  font: 14px microsoft yahei;
  height: 40px;
  width: 90%;
  border: 1px solid #d8d8d8;
  border-radius: 5rpx;
}

.areas {
  width: 90%;
  font: 14px microsoft yahei;
  height: 160rpx;
  border: 1px solid #d8d8d8;
  color: #000;
}

.wx-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(7, 52, 75, 1);
}

.wx-dialog {
  position: fixed;
  z-index: 5000;
  width: 100%;
  top: 45%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
}

.wx-dialog-title {
  font-size: 14px;
  padding: 15px 15px 15px;
  color: #808080;
}

.wx-dialog-content {
  padding: 5px;
  display: flex;
  justify-content: center;
}

.dialog-button {
  position: fixed;
  display: flex;
  height: 80px;
  bottom: 0px;
  z-index: 5000;
  width: 100%;
  background-color: #e7ebed;
  overflow: hidden;
}

.btn-left {
  height: 40px;
  width: 40px;
  padding: 10px 10px 0px 10px;
}

.btn-right {
  height: 40px;
  width: 40px;
  padding: 10px 10px 0px 10px;
}

.shared-img {
  height: 550rpx;
  width: 100%;
  border: 1px solid #eee;
}

.btn-shared {
  padding: 0;
  margin: 0;
  background: none;
  display: flex;
}

button::after {
  border: none;
}

.user {
  display: flex;
  justify-content: flex-start;
  padding-left: 10%;
  padding-top: 10px;
  padding-bottom: 10px;
}

.user-avatar-img {
  height: 50px;
  width: 50px;
}

.userInfo {
  padding-left: 10px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
