/* pages/jobs/jobDetails.wxss */
@import '../../content/wxss/base';
page {
  background-color: #f5f5f5;
  font-size: 12px;
}
.block {
  border-bottom: 1px solid #F2F2F2;
  background-color: #fff;
  padding: 20px 20rpx 30rpx;
}
.block:last-child {
  border-bottom: 1px solid transparent;
}
.jobName {
  font-size: 16px;
  font-weight: bold;
  padding: 10rpx 0 20rpx;
}
.title {
  font-size: 14px;
  color: #444;
  font-weight: bold;
  padding: 10rpx 0;
}
.detail,.colorCommon{
  margin-bottom: 20rpx;
  color: #666;
}
.colorCommon {
  display: flex;
}
.colorCommon .left {
  width: 102rpx;
  /* text-align: justify;
  text-align-last: justify; */
}

/* .salary .left {
  text-align: justify;
  text-align-last: justify;
} */
.colorCommon .right {
  flex:1;
}
.colorCommon:last-child {
  margin-bottom: 0;
}
.colorCommon .uniq {
  padding: 0 4rpx;
}
.block .iconItems image {
  width: 16px;
  height: 16px;
  margin-right: 5px;
}
