.wx-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(7, 52, 75, 1);
}
.wx-dialog {
  position: fixed;
  z-index: 5000;
  width: 100%;
  top: 45%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
}
.wx-dialog-title {
  font-size: 14px;
  padding: 15px 15px 15px;
  color: #808080;
}
.wx-dialog-content {
  padding: 5px;
  display: flex;
  justify-content: center;
}
.dialog-button {
  position: fixed;
  display: flex;
  height: 80px;
  bottom: 0px;
  z-index: 5000;
  width: 100%;
  background-color: #e7ebed;
  overflow: hidden;
}
