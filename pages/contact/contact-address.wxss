page {
  background-color: #f5f5f5;
  font-family: Microsoft Yahei;
  font-size: 14px;
}

.address-header {
  padding: 13px 8px 13px 15px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  color: #333;
  font-weight: bold;
  font-size: 16px;
  border-bottom: 1px solid #eee;
}
 
.address-content {
  background-color: #fff;
  padding-left: 15px;
  font-size: 13px;
  color: #333;
}
 

.address-content-item{
  height: 30px;
  display: flex;
  padding: 10px 0;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start; 
}
 


.address-name{
  font-size: 13px;
  line-height: 13px;
}

.address-phone{
  padding-top: 8px;
  font-size: 13px;
  line-height: 13px;
  color: #999;
}


.toward-img {
  width: 50rpx;
  height: 50rpx;
}

.margin-top-40 {
  margin-top: 40px;
}

.add {
  background-color: #fff;
  padding: 15px 0;
  color: #1195dd;
  font-size: 16px;
  text-align: center;
}

.border-top-1 {
  border-top: 1px solid #eee;
}
