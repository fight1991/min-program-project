@import "../../content/wxss/common.wxss";

page {
  width: 100%;
  height: 100%;
  background-color: #f1f1f1;
  padding: 0;
  margin: 0;
  overflow: auto;
}

.list-item {
  display: flex;
  flex-direction: column;
  float: left;
  width: 92%;
  padding: 2%;
  margin: 3px;
  margin-left: 2%;
  border-radius: 4px 4px 4px 4px;
  background-color: #fefefe;
}

.list-item-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.list-item-title {
  color: #2093e6;
  font: 16px microsoft yahei;
}

.list-item-info {
  color: #8b8682;
  font: 12px microsoft yahei;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
