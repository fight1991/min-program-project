@import "../../content/wxss/list.wxss";

page {
  width: 100%;
  height: 100%;
  background-color: #f1f1f1;
  padding: 0;
  margin: 0;
  overflow: auto;
}

.list-item1 {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 10%;
  margin-bottom: 2px;
  background-color: #fefefe;
}

.list-item-left {
  width: 17%;
  background-position-x: center;
  background-position-y: center;
}

.list-item-middle {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 68%;
}

.list-item-right {
  text-align: right;
  width: 15%;
  display: flex;
  align-items: flex-start;
  padding-right: 10px;
  flex-direction: column;
  justify-content: space-around;
}

.search-input {
  padding-left: 10px;
  font-size: 14px;
  width: 100%;
  color: #808080;
}

.placeholder {
  font-size: 12px;
  color: #c1c1c1;
}

.search-item {
  border-radius: 5px;
  margin-left: 2%;
  background-color: #fff;
  width: 96%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-between;
}

.search-btn {
  color: #808080;
  text-align: right;
  font-size: 12px;
  padding-right: 10px;
  padding-left: 10px;
  border-left: 1px solid #c1c1c1;
  height: 25px;
  line-height: 25px;
}
