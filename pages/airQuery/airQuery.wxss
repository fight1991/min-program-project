/* pages/airQuery/airQuery.wxss */
page {
  background-color: #f5f5f5;
  font-size: 28rpx;
}
.form {
  padding: 20px;
  background-color: #fff;
}
.airimg{
  display: inline-block;
  line-height: 10px;
  height: 21px;
  top:4px;
  position: relative;
}
.airimg image{
  width: 21px;
  height: 21px;
}
.section__title {
  color: #666;
  margin-bottom: 5px;
  line-height: 40rpx;
}
.section__title.category {
  display: flex;
  justify-content: space-between;
}
.section__title.category text:nth-child(2) {
  color: red;
  flex: 1;
  font-size:24rpx;
  align-self: flex-end;
  text-align: right;
}
.section {
  margin-bottom: 10px;
}
.section input {
  padding: 10px 5px;
  border: 1px solid #ccc;
  border-radius: 3px;
}
.catePicker .search-item {
  position: relative;
}
.search-item image {
  position: absolute;
  right: 10px;
  top: 50%;
  transform: translateY(-50%);
}
.input-placeholder {
  color: #bbb;
}
.btn-area {
  background-color: #f5f5f5;
}
.query {
  background-color: #1296DB;
  color: #fff;
  border: none;
  margin-bottom: 20px;
}
.myfocus {
  padding: 40px 20px 0;
}
.btn-focus {
  background-color: #fff;
  color:#666;
  border: 1px solid #999;
}

input[disabled] {
  background-color: #f5f5f5;
}