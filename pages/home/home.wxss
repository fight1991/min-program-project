page {
  background-color: #f4f4f4;
  height: 100%;
}

.table {
  border-right: 0;
  border-bottom: 0;
  widows: 98%;
  background-color: #fff;
  margin-bottom: 1%;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  padding: 0 0 18px 0;
}
.tr-top {
  padding-top: 18px;
}
.td {
  font: 14px microsoft yahei;
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:0 2px; 
  position: relative;
}

.td-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 60rpx;
}

.td-title {
  font-size: 12px;
}

.th {
  display: flex;
  border-bottom: 1px solid #eee;
  justify-content: flex-start;
  font: 12px microsoft yahei;
  padding: 2% 0 2% 0%;
  text-align: left;
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  font-size: 30rpx;
  align-items: center;
}

.th-title {
  margin-left: 10px;
  margin-right: 10px;
  width: 10rpx;
  height: 20px;
  background-color: #1296db;
}

.table-view {
  font: 12px microsoft yahei;
}
.float_div {
  position: absolute;     
  right: 10px;         
  text-align: center;              
  height: 20px;
  line-height: 20px;
  width: 20px;
  font-size: 12px;
  color: #fff;
  background-color: red;
  border-radius: 50%;
}
