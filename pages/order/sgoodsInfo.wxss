/* pages/order/sgoodsInfo.wxss */
page {
  background-color: #f5f5f5;
  font-size: 28rpx;
}
.goods_title{
  color: #333;
  padding: 15rpx 40rpx;
  font-size: 30rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #eee;
  position: relative;
}
.msg-tip{
  background-color: white;
}
.msg-cont{
  color: #444;
  padding: 20rpx 40rpx;
  margin-bottom: 20rpx;
  word-wrap: break-word;
}
.msg-f view{
  display: inline-block;
}
.msg-f .msg-img{
  position: relative;
  display: inline-block;
  top:5rpx;
  padding:6rpx; 
  margin-left: 30rpx;
}
.msg-f image{
  width:30rpx;
  height:30rpx;
}
.btn view{
  display: inline-block;
  width: 50vw;
  text-align: center;
  line-height: 45px;
  font-size: 16px;
  height: 45px;
}
.airimg{
  position: absolute;
  display: inline-block;
  width: 14rpx;
  height: 24rpx;
  text-align: right;
  right: 20rpx;
}
.airimg image{
  width: 14rpx;
  height: 24rpx;
}