/* pages/airQuery/airQuery.wxss */
page {
  background-color: #f5f5f5;
  font-size: 28rpx;
  height: 100%;
}
.form {
  padding: 20rpx;
  background-color: #fff;
}
.select_group view{
  display: inline-block;
  width: 49%;
  height: 54rpx;
  background-color:white;
  color: #1296DB;
  text-align: center;
  padding-top:12rpx;
  border: 2rpx solid #1296DB
}
.unAble{
  border-color: #aaa !important;
  color: #aaa !important;
}
.unAbleselected{
  background-color: #aaa !important;
  color: white !important;
  border-color: #aaa !important;
}
.selected{
  background-color: #1296DB !important;
  color: white !important;
}
.section__title {
  color: #999;
  margin-bottom: 10rpx;
  line-height: 40rpx;
}
.section__title.category {
  display: flex;
  justify-content: space-between;
}
.section {
  margin-bottom: 10rpx;
}
.section input,textarea {
  padding: 10rpx 5rpx;
  border: 1rpx solid #ccc;
  border-radius: 3rpx;
}
.corptip{
  background-color: #1296DB;
  font-size: 24rpx;
  display: inline-block;
  color: white;
  border-radius: 4rpx;
  margin:10rpx 8rpx 8rpx 0;
  padding:4rpx 8rpx;
}
.input-placeholder {
  color: #bbb;
}

.btn-area {
  background-color: #f5f5f5;
}
.addcorpbtn{
  margin-top: 20rpx;
  margin-bottom: 100rpx;
  text-align: center;
  padding: 20px;
  background-color: white;
  color:#1296DB;
  font-size: 30rpx;
}
.btn view{
  display: inline-block;
  width: 50vw;
  text-align: center;
  height: 45px;
  font-size: 16px;
  line-height: 45px;
}
input{
  min-height:unset;
  height: 40rpx;
  line-height: 40rpx;
}
.corpname{
  font-size: 30rpx;
}
.corpmark{
  margin-top:12rpx;
  font-size: 24rpx;
}
.corpname,.corptip,corpmark{
  pointer-events: none;
}
.selectcorp{
  font-size: 26rpx;
  color:#aaa;
  text-align: right;
  display: inline-block;
  width: 507rpx;
  margin-right: 0rpx;
  position: relative;
}
.airimg{
  position: absolute;
  display: inline-block;
  height: 21rpx;
  text-align: right;
  left:700rpx;
}
.airimg image{
  width: 14rpx;
  height: 24rpx;
}
.isDel {
  height:40rpx;
  width:40rpx;
  position: absolute;
  right: 15px;
  top:15px;
}
.isDel image{
  height:40rpx;
  width:40rpx;
}