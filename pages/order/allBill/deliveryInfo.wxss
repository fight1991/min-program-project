/* pages/order/allBill/deliveryInfo.wxss */
@import '../../../content/wxss/base';
page {
  background-color: #f5f5f5;
  font-size: 24rpx;
  color: #666;
}
.delivery,
.history {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.delivery .title {
  padding: 10rpx;
  font-size: 28rpx;
}
.input-placeholder {
  color: #ccc;
}
.nameInfo,
.addressInfo,
.linkWay,
.addressDetail {
  position: relative;
  margin-bottom: 10rpx;
}
.nameInfo image,
.addressInfo image {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  margin-right: 10rpx;
  right: 0;
}
.nameInfo .contactImg {
  z-index: 66;
  padding: 10rpx;
}
.nameInfo input,
.linkWay input ,
.addressInfo input,
.addressDetail textarea {
  width: 100%;
  height: 80rpx;
  line-height: 60rpx;
  border: 1px solid #ccc;
  padding: 10rpx 10px;
  box-sizing: border-box;
  border-radius: 6rpx;
}
.addressDetail textarea {
  height: 200rpx;
  padding: 10rpx;
}
.history {
  color: #444;
  overflow: auto;
  height: 300rpx;
}
.history .title {
  border-bottom: 1px solid #f5f5f5;
  padding: 0 0 20rpx;
}
.history .oneLine {
  margin-bottom: 10rpx;
}
.history .oneLine image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 10rpx;
}
.linkInfo {
  border-bottom: 1px solid #f5f5f5;
  padding: 20rpx 10rpx;
  
}
.linkInfo .name {
  margin-right: 30rpx;
}
.lic-fin {
  margin:30rpx;
  font-size: 40rpx;
  border-radius: 5px;
  background-color: #1296DB;
  color: #fff;
  padding: 20rpx;
}
.picker {
  line-height: 40px;
  height: 40px;
  padding-left: 5px;
  width: 90%;
}
.section{
  display:flex;
  justify-content:space-between;
  font:14px microsoft yahei;
  color:#000;
}