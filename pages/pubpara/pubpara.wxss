page {
  background-color: #f4f4f4;
  height: 100%;
}

.top-img {
  border-top: 0.5px solid #f5f5f5;
  height: 100px;
  width: 100%;
}

.table {
  border-right: 0;
  border-bottom: 0;
  widows: 98%;
  background-color: #fff;
  margin-bottom: 1%;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  padding: 0 0 18px 0;
}
.tr-top {
  padding-top: 18px;
}
.td {
  padding:0 2px; 
  text-align: center;
  font-size: 12px;
  width: 25%;
}

.table-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 60rpx;
}

.table-view {
  font-size: 12px;
}

.movies-tr {
  height: 50%;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.movies-td {
  height: 100%;
  text-align: center;
  font-size: 12px;
  width: 100%;
}

.movies-image {
  width: 100%;
  height: 200px;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.info {
  background-color: #fff;
  width: 100%;
}

.info-item {
  width: 100%;
  height: 30px;
  line-height: 30px;
}

.info-item-left {
  width: 22px;
  display: inline-block;
  vertical-align: top;
}

.info-item-right {
  margin-left: 10px;
  display: flex;
  justify-content: space-between;
  width: 92%;
  vertical-align: top;
}

.info-item-information {
  font-size: 12px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.info-item-time {
  text-align: right;
  width: 25%;
  font-size: 12px;
  color: #9b9b9b;
}

.info-item-right-title {
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 75%;
  height: 30px;
  line-height: 30px;
  color: #353535
}

.info-item-left-title {
  font-size: 30px;
  color: #1296db;
  padding-right: 10px;
}
.th {
  display: flex;
  border-bottom: 1px solid #eeeeee;
  justify-content: flex-start;
  font: 12px microsoft yahei;
  padding: 2% 0 2% 0%;
  text-align: left;
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  padding-top:30rpx; 
  padding-bottom: 30rpx;
  font-size: 30rpx;
}
.th-view {
  margin-left: 5px;
  width: 10rpx;
  height: 20px;
  background-color: #1296db;
}
.titles-type{
  width: 92%;
  display: flex;
  justify-content: space-between;
}
.details-img{
  height: 25px;
  width: 25px;
}