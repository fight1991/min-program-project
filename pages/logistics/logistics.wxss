@import "../../content/wxss/list.wxss";
@import "../../content/wxss/common.wxss";
page {
  width: 100%;
  height: 100%;
  background-color: #f1f1f1;
  padding: 0;
  margin: 0;
  overflow: auto;
}


.files-item{
  height: 50px;
  line-height: 50px;
  border: 1px solid #2093e6;
}
.list-item {
  padding: 10px;
  display: flex;
  justify-content: space-between;
  background-color: #fefefe;
  flex-direction: column;
  height: 12%;
  margin-bottom: 10px;
}
.image-menu {
  height: 120rpx;
  width: 120rpx;
  position: absolute;
  bottom: 100rpx;
  right: 100rpx;
  z-index: 100;
}
.list-item-top {
  display: flex;
  justify-content: space-between;
  height: 40%;
  /* padding-left: 15px; */
}

.list-item-bottom {
  display: flex;
  justify-content: space-between;
  height: 30%;
}

.list-item-middle {
  display: flex;
  justify-content: space-between;
  height: 30%;
}

.list-item-title {
  width: 75%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #2093e6;
  font: 16px microsoft yahei;
}

.list-item-info1 {
  color: #8b8682;
  font: 12px microsoft yahei;
}
