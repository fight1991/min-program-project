@import "../../content/wxss/search.wxss";

page {
  /* height: 100%; */
  background-color: #f5f5f5;
  padding: 0;
  margin: 0;
  font: 14px "microsoft yahei";
}

.question-content {
  height: 50%;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.question-des {
  background-color: #eee;
  height: 90%;
  width: 90%;
  font-size: 12px;
  border: 10px solid #eee;
}

.placeholders {
  color: #c1c1c1;
}

.upload {
  margin-top: 10px;
  display: flex;
  justify-content: flex-start;
  background-color: #fff;
}

.upload-images {
  z-index: 2;
  height: 80px;
  width: 80px;
  background-color: #eee;
}

.check-item {
  padding: 10px;
  position: relative;
}

.image-menu {
  height: 120rpx;
  width: 120rpx;
}

.image-remove {
  width: 15px;
  height: 15px;
  position: absolute;
  top: 5px;
  right: 5px;
}

.search-btn {
  margin: 20px 0 20px 0;
  border-radius: 4px;
}
