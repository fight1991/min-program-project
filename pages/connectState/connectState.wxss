@import "../../content/wxss/search.wxss";

.search-item-lb1 {
  width: min-content;
  color: #c1c1c1;
  letter-spacing: 1px;
  font-family: "微软雅黑";
  flex-grow: 1;
  white-space: nowrap;
}

.search-item-input {
  font-size: 17px;
  width: max-content;
}

.list-item {
  padding: 10px;
  display: flex;
  justify-content: space-between;
  background-color: #fefefe;
  flex-direction: column;
  margin-bottom: 5px;
}

.list-item-top {
  height: 35%;
  padding-left: 15px;
  padding-right: 15px;
}

.list-item-title {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 30px;
  width: 250rpx;
  white-space: nowrap;
  color: #808080;
  border-radius: 5px;
  font: 14px microsoft yahei;
  font-weight: bold;
}

.list-item-info {
  color: #2093e6;
  font: 13px microsoft yahei;
}

.top-content {
  padding-top: 5px;
  font: 28rpx microsoft yahei;
  padding-bottom: 5px;
  color: #999;
}

.search-item-img {
  width: 26px;
  height: 25px;
}

.search-item-lb {
  padding-left: 30px;
  font-size: 14px;
  color: #9b9b9b;
  padding-bottom: 4px;
}

.search-item {
  border-bottom: 1px solid #d8d8d8;
  height: 45px;
}

.search-btn {
  margin-top: 10px;
  height: 45px;
  border-radius: 5px;
}

